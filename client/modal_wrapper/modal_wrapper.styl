.nav-components__modal-wrapper {
  z-index: 20;
  position: absolute;
  width: 100%;
  height: 100%;

  background: rgba(0, 0, 0, 0.5);
  transform: translate3d(0, 0, 0);
  transform-style: preserve-3d;


  > div:first-child {
    background: #F1F1F1;
  }

  @media screen and (min-width: 600px) {
    > div:first-child {
      width: 50%;
      height: 80%;
      position: relative;
      margin: 5% auto;
      max-width: 600px;
    }
  }

  &:empty {
    display: none;
  }
}